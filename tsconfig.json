{
  "exclude": [
    "node_modules",
    "lib",
    "./src/**/*.spec.ts",
    "./sites/**/*.spec.ts"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "module": "ES2020",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "lib/esm",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
