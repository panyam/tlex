{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./components",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["components/**/*"],
  "exclude": ["node_modules", "dist"]
}
